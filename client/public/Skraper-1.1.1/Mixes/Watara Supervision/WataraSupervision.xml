<ImageComposition xsi:noNamespaceSchemaLocation="https://www.skraper.net/ImageComposition.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Information ShortName="Supervision"
               LongName="Watara SuperVision HD 4:3"
               Description="Watara Supervision Mix with mapping on real console photo"
               Author="Bkg2k" />
  <Viewport Color="#00FFFFFF" Width="1280" Height="800" />
  <Drawings>
    <Item IfSystem="IsNotInTheListOrAncestors:207" Type="LocalFile" LocalFilePath="NotForYou.png">
      <Display X="50%" Y="50%" Width="100%" Height="100%" Anchor="VCenterHCenter" />
    </Item>
    <Item IfSystem="IsInTheListOrAncestors:207" TestOnly="true">
      <Children>
        <!-- Cabinet - Used as new reference for childrens -->
        <Item Type="LocalFile" LocalFilePath="Console.png">
          <Display X="50%" Y="50%" Width="100%" Height="100%" Anchor="VCenterHCenter" />
          <Children Reference="Parent">
            <!-- Projected screenshot -->
            <Item Type ="Screenshot">
              <Display Mode="Distord" X="22.13%" Y="21.75%" X2="63.07%" Y2="15.1%" X3="71.71%" Y3="61.58%" X4="30.29%" Y4="68.50%" Antialiasing="High" Effect="GreenGameboy" />
            </Item>
            <!-- Cabinet once again to anti-alias the srceenshot edges -->
            <Item Type="LocalFile" LocalFilePath="Console.png">
              <Display X="50%" Y="50%" Width="100%" Height="100%" Anchor="VCenterHCenter" />
            </Item>
          </Children>
        </Item>
        <!-- Wheel on right -->
        <Item Type="Wheel">
          <Display X="100%" Y="0%" Width="100!" Height="30!" Anchor="TopLeft" />
          <Rotation Angle="90" XOffset="0%" YOffset="0%" />
        </Item>
        <!-- 3D Box -->
        <Item Type="Box3D">
          <Display X="0%" Y="100%" Transparency="0.9" Width="45%" Height="60%" Anchor="BottomLeft" />
        </Item>
        <!-- Support -->
        <Item Type="Support">
          <Display X="20%" Y="95%" Transparency="0.9" Width="20%" Height="20%" Anchor="BottomLeft" />
        </Item>
      </Children>
    </Item>
  </Drawings>
</ImageComposition>

