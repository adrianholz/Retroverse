<ImageComposition xsi:noNamespaceSchemaLocation="https://www.skraper.net/ImageComposition.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Information ShortName="Gamegear"
               LongName="SEGA Gamegear HD 4:3"
               Description="SEGA Gamegear mix with mapping on real console photo"
               Author="Bkg2k" />
  <Viewport Color="#00FFFFFF" Width="1280" Height="960" />
  <Drawings>
    <Item IfSystem="IsNotInTheListOrAncestors:21" Type="LocalFile" LocalFilePath="NotForYou.png">
      <Display X="50%" Y="50%" Width="100%" Height="100%" Anchor="VCenterHCenter" />
    </Item>
    <Item IfSystem="IsInTheListOrAncestors:21" TestOnly="true">
      <Children>
        <!-- Cabinet - Used as new reference for childrens -->
        <Item Type="LocalFile" LocalFilePath="Console43.png">
          <Display X="50%" Y="50%" Width="100%" Height="100%" Anchor="VCenterHCenter" />
          <Children Reference="Parent">
            <!-- Projected screenshot -->
            <Item Type ="Include" LocalFilePath="ScreenShot.include.xml">
              <Display Mode="Distord" X="22.73%" Y="16.35%" X2="74.68%" Y2="7.70%" X3="80.23%" Y3="63.22%" X4="28.51%" Y4="72.81%" Antialiasing="High" />
            </Item>
            <!-- Cabinet once again to anti-alias the srceenshot edges -->
            <Item Type="LocalFile" LocalFilePath="Console43.png">
              <Display X="50%" Y="50%" Width="100%" Height="100%" Anchor="VCenterHCenter" />
            </Item>
          </Children>
        </Item>
        <!-- Wheel on right -->
        <Item Type="Wheel">
          <Display X="100%" Y="100%" Width="50%" Height="30%" Anchor="BottomRight" />
        </Item>
        <!-- 3D Box -->
        <Item Type="Box3D">
          <Display X="0%" Y="100%" Transparency="0.9" Width="45%" Height="60%" Anchor="BottomLeft" />
        </Item>
        <!-- Support -->
        <Item Type="Support">
          <Display X="20%" Y="95%" Transparency="0.9" Width="20%" Height="20%" Anchor="BottomLeft" />
        </Item>
      </Children>
    </Item>
  </Drawings>
</ImageComposition>

